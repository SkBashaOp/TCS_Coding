def solve(arr):
    n=len(arr)
    pre,suf=[0]*n,[0]*n
    pre[0],suf[n-1]=arr[0],arr[n-1]
    for i in range(1,n):
       pre[i]=pre[i-1]+arr[i]
    for i in range(n-2,-1,-1):
        suf[i]=suf[i+1]+arr[i]
    for i in range(n):
        if pre[i]==suf[i]:
            return i
    return -1
arr=[2,3,-1,8,4]
print(solve(arr))
